# ==========================================
# AUTHENTICATION & SECURITY (SHARED)
# ==========================================

# JWT Configuration - MUST BE IDENTICAL ACROSS ALL TEAMS
JWT_SECRET=hr_system_shared_jwt_secret_2025_do_not_change
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=hr_system_shared_refresh_secret_2025_do_not_change
JWT_REFRESH_EXPIRATION=30d

# Password Hashing - MUST BE IDENTICAL
BCRYPT_SALT_ROUNDS=10

# Session Configuration - MUST BE IDENTICAL
SESSION_SECRET=hr_system_shared_session_secret_2025_do_not_change

# ==========================================
# APPLICATION CONFIGURATION (SHARED)
# ==========================================

NODE_ENV=development
API_PREFIX=api

# ==========================================
# CORS CONFIGURATION (SHARED)
# ==========================================

CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005
CORS_CREDENTIALS=true

# ==========================================
# FILE UPLOAD CONFIGURATION (SHARED)
# ==========================================

MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ==========================================
# RATE LIMITING (SHARED)
# ==========================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==========================================
# FRONTEND CONFIGURATION (SHARED)
# ==========================================

FRONTEND_URL=http://localhost:3000

# ==========================================
# API DOCUMENTATION (SHARED)
# ==========================================

SWAGGER_ENABLED=true

# ==========================================
# LOGGING CONFIGURATION (SHARED)
# ==========================================

LOG_LEVEL=debug
DEBUG=true

# ==========================================
# SUBSYSTEM PORTS (REFERENCE ONLY)
# ==========================================
